{
  "name": "AutoBolt Extension QA Configuration",
  "version": "1.0.0",
  "description": "Continuous QA configuration based on Taylor's recommendations",
  "created": "2025-09-03",
  "environment": "production",
  
  "thresholds": {
    "smoke_test_success_rate": 95,
    "full_qa_success_rate": 90,
    "performance_degradation_threshold": 20,
    "health_check_failure_threshold": 10,
    "critical_directory_success_rate": 98,
    "form_mapping_accuracy": 95,
    "error_handling_coverage": 85,
    "load_time_threshold_ms": 3000,
    "memory_usage_threshold_mb": 100,
    "directory_accessibility_rate": 90
  },
  
  "alerting": {
    "enabled": true,
    "channels": ["console", "file", "github"],
    "severity_levels": {
      "CRITICAL": {
        "color": "#FF0000",
        "notify_immediately": true,
        "escalate_after_minutes": 15
      },
      "HIGH": {
        "color": "#FF8C00",
        "notify_immediately": true,
        "escalate_after_minutes": 30
      },
      "MEDIUM": {
        "color": "#FFD700",
        "notify_immediately": false,
        "escalate_after_minutes": 60
      },
      "LOW": {
        "color": "#90EE90",
        "notify_immediately": false,
        "escalate_after_minutes": 240
      }
    },
    "slack_webhook": null,
    "email_recipients": [],
    "github_notifications": true
  },
  
  "scheduling": {
    "enabled": true,
    "timezone": "UTC",
    "schedules": {
      "smoke_tests": {
        "cron": "0 6 * * *",
        "description": "Daily smoke tests at 6 AM UTC",
        "enabled": true,
        "timeout_minutes": 20
      },
      "performance_tests": {
        "cron": "0 2 * * 0",
        "description": "Weekly performance tests on Sundays at 2 AM UTC",
        "enabled": true,
        "timeout_minutes": 40
      },
      "health_checks": {
        "cron": "0 1 1 * *",
        "description": "Monthly health checks on 1st day at 1 AM UTC",
        "enabled": true,
        "timeout_minutes": 55
      },
      "full_qa_on_release": {
        "trigger": "tag_push",
        "description": "Full QA suite on release tag creation",
        "enabled": true,
        "timeout_minutes": 75
      }
    }
  },
  
  "directories": {
    "test_coverage": "all",
    "critical_directories": [
      "Google Business Profile",
      "Yelp",
      "Facebook Business",
      "Bing Places",
      "Apple Maps",
      "TripAdvisor",
      "Foursquare",
      "Yellow Pages",
      "Better Business Bureau",
      "Angie's List"
    ],
    "sample_sizes": {
      "smoke_tests": 10,
      "performance_tests": 20,
      "health_checks": 57,
      "full_qa": 57
    },
    "timeout_ms": 30000,
    "retry_attempts": 3,
    "retry_delay_ms": 1000
  },
  
  "test_suites": {
    "SMOKE": {
      "name": "Daily Smoke Tests",
      "target_duration_minutes": 15,
      "frequency": "daily",
      "priority": "HIGH",
      "required_success_rate": 95,
      "tests": [
        {
          "name": "basic_functionality_validation",
          "timeout_minutes": 3,
          "critical": true,
          "description": "Validate core extension functionality"
        },
        {
          "name": "critical_directory_access",
          "timeout_minutes": 5,
          "critical": true,
          "description": "Test top 10 directory accessibility"
        },
        {
          "name": "core_form_mapping",
          "timeout_minutes": 4,
          "critical": true,
          "description": "Validate form mapping for critical directories"
        },
        {
          "name": "essential_error_handling",
          "timeout_minutes": 3,
          "critical": true,
          "description": "Test basic error handling scenarios"
        }
      ]
    },
    
    "FULL_QA": {
      "name": "Pre-Release Full QA Suite",
      "target_duration_minutes": 60,
      "frequency": "pre-release",
      "priority": "CRITICAL",
      "required_success_rate": 90,
      "parallel_batches": 3,
      "tests": [
        {
          "name": "comprehensive_directory_validation",
          "timeout_minutes": 20,
          "critical": true,
          "description": "Validate all 57 directories functionality"
        },
        {
          "name": "complete_form_mapping_test",
          "timeout_minutes": 15,
          "critical": true,
          "description": "Test form mappings for all directories"
        },
        {
          "name": "full_error_handling_validation",
          "timeout_minutes": 10,
          "critical": true,
          "description": "Comprehensive error handling validation"
        },
        {
          "name": "performance_benchmark",
          "timeout_minutes": 8,
          "critical": false,
          "description": "Performance benchmarking"
        },
        {
          "name": "security_validation",
          "timeout_minutes": 5,
          "critical": true,
          "description": "Security and privacy validation"
        },
        {
          "name": "user_workflow_testing",
          "timeout_minutes": 12,
          "critical": false,
          "description": "End-to-end user workflow testing"
        }
      ]
    },
    
    "PERFORMANCE": {
      "name": "Weekly Performance Validation",
      "target_duration_minutes": 30,
      "frequency": "weekly",
      "priority": "MEDIUM",
      "required_success_rate": 80,
      "tests": [
        {
          "name": "load_time_analysis",
          "timeout_minutes": 8,
          "critical": false,
          "description": "Analyze page load times"
        },
        {
          "name": "memory_usage_tracking",
          "timeout_minutes": 6,
          "critical": false,
          "description": "Track memory usage patterns"
        },
        {
          "name": "script_optimization_validation",
          "timeout_minutes": 5,
          "critical": false,
          "description": "Validate script optimization effectiveness"
        },
        {
          "name": "directory_response_times",
          "timeout_minutes": 8,
          "critical": false,
          "description": "Measure directory response times"
        },
        {
          "name": "queue_processing_performance",
          "timeout_minutes": 3,
          "critical": false,
          "description": "Validate queue processing performance"
        }
      ]
    },
    
    "HEALTH_CHECK": {
      "name": "Monthly Health Checks",
      "target_duration_minutes": 45,
      "frequency": "monthly",
      "priority": "MEDIUM",
      "required_success_rate": 85,
      "tests": [
        {
          "name": "directory_accessibility_scan",
          "timeout_minutes": 15,
          "critical": false,
          "description": "Scan all directories for accessibility"
        },
        {
          "name": "form_structure_change_detection",
          "timeout_minutes": 12,
          "critical": true,
          "description": "Detect form structure changes"
        },
        {
          "name": "anti_bot_protection_analysis",
          "timeout_minutes": 8,
          "critical": true,
          "description": "Analyze anti-bot protection changes"
        },
        {
          "name": "field_selector_validation",
          "timeout_minutes": 6,
          "critical": true,
          "description": "Validate field selector accuracy"
        },
        {
          "name": "comprehensive_regression_test",
          "timeout_minutes": 4,
          "critical": false,
          "description": "Comprehensive regression testing"
        }
      ]
    }
  },
  
  "reporting": {
    "enabled": true,
    "formats": ["json", "html", "markdown"],
    "storage": {
      "local": true,
      "retention_days": {
        "smoke_tests": 30,
        "full_qa": 180,
        "performance_tests": 90,
        "health_checks": 365
      },
      "artifact_upload": true,
      "artifact_retention_days": 90
    },
    "dashboard": {
      "enabled": true,
      "auto_refresh_seconds": 30,
      "metrics": [
        "success_rate_trend",
        "performance_trend",
        "directory_health",
        "error_frequency",
        "test_duration_trend"
      ]
    }
  },
  
  "performance_baselines": {
    "extension_load_time_ms": 2000,
    "content_script_injection_ms": 500,
    "form_mapping_speed_ms": 3000,
    "queue_processing_rate_per_minute": 12,
    "memory_usage_baseline_mb": 50,
    "directory_response_time_ms": 5000,
    "error_recovery_time_ms": 2000
  },
  
  "regression_detection": {
    "enabled": true,
    "comparison_baseline": "last_successful_run",
    "acceptable_degradation_percent": 15,
    "metrics_to_track": [
      "success_rate",
      "response_time",
      "memory_usage",
      "error_rate",
      "form_mapping_accuracy"
    ],
    "alert_on_regression": true,
    "auto_rollback_threshold_percent": 25
  },
  
  "security_validation": {
    "enabled": true,
    "checks": [
      "content_security_policy",
      "permission_validation",
      "data_sanitization",
      "secure_communication",
      "user_data_protection"
    ],
    "vulnerability_scanning": true,
    "dependency_audit": true
  },
  
  "integration_points": {
    "github_actions": {
      "enabled": true,
      "workflow_file": ".github/workflows/qa-automation.yml"
    },
    "slack": {
      "enabled": false,
      "webhook_url": null,
      "channels": {
        "critical_alerts": "#qa-critical",
        "daily_reports": "#qa-reports"
      }
    },
    "email": {
      "enabled": false,
      "smtp_config": null,
      "recipients": {
        "critical_alerts": [],
        "daily_reports": [],
        "weekly_summaries": []
      }
    }
  },
  
  "debugging": {
    "verbose_logging": false,
    "screenshot_on_failure": true,
    "save_network_logs": true,
    "save_console_logs": true,
    "test_data_preservation": true
  },
  
  "maintenance": {
    "auto_cleanup_enabled": true,
    "cleanup_schedule": "0 3 * * 0",
    "max_log_files": 100,
    "max_report_files": 500,
    "backup_critical_results": true
  }
}