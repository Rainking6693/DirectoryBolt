{
  "name": "auto-bolt-extension",
  "version": "1.0.0",
  "description": "Chrome extension for automated business directory submissions",
  "main": "background-batch.js",
  "scripts": {
    "build": "node scripts/simple-build.js",
    "validate": "node scripts/simple-validate.js",
    "version": "node scripts/version-manager.js",
    "test": "node automated-testing-pipeline.js SMOKE",
    "test:smoke": "node automated-testing-pipeline.js SMOKE",
    "test:full": "node automated-testing-pipeline.js FULL_QA",
    "test:performance": "node automated-testing-pipeline.js PERFORMANCE",
    "test:health": "node automated-testing-pipeline.js HEALTH_CHECK",
    "test:comprehensive": "node comprehensive-test-suites.js all",
    "test:alerts": "node automated-alert-system.js",
    "qa:run": "npm run test:comprehensive && npm run test:alerts"
  },
  "devDependencies": {
    "archiver": "^5.3.1",
    "adm-zip": "^0.5.10"
  },
  "keywords": [
    "chrome-extension",
    "business-directories",
    "automation",
    "seo",
    "local-business"
  ],
  "author": "Auto-Bolt Team",
  "license": "MIT"
}