# DirectoryBolt Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# STRIPE CONFIGURATION (REQUIRED FOR PAYMENTS)
# =============================================================================

# Stripe Secret Key - Get from https://dashboard.stripe.com/apikeys
# Use sk_test_ for development, sk_live_ for production
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Price IDs - Create products in Stripe Dashboard first
# Format: price_1234567890abcdef
STRIPE_STARTER_PRICE_ID=price_starter_replace_with_actual_id
STRIPE_GROWTH_PRICE_ID=price_growth_replace_with_actual_id
STRIPE_PROFESSIONAL_PRICE_ID=price_professional_replace_with_actual_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_replace_with_actual_id

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Your application URL (required for Stripe redirects)
NEXTAUTH_URL=http://localhost:3000

# Custom User Agent for web scraping (optional)
USER_AGENT=DirectoryBolt/2.0 (+https://your-domain.com)

# =============================================================================
# DATABASE CONFIGURATION (OPTIONAL)
# =============================================================================

# Supabase Configuration (if using Supabase for data storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# =============================================================================
# AI/API INTEGRATIONS (OPTIONAL)
# =============================================================================

# OpenAI API Key (for AI-powered analysis features)
OPENAI_API_KEY=sk-your-openai-key-here

# =============================================================================
# MONITORING & ANALYTICS (OPTIONAL)
# =============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn-here

# Google Analytics ID
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Set to 'production' for production deployment
NODE_ENV=development

# Enable debug logging (true/false)
DEBUG=true

# Set log level (error, warn, info, debug)
LOG_LEVEL=info
