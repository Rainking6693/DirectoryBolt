# DirectoryBolt Environment Template
# Copy this file to .env.local (gitignored) and fill in real values before running the app.

# -----------------------------------------------------------------------------
# Core Application URLs
# -----------------------------------------------------------------------------
NODE_ENV=development
BASE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000/api/auth
SITE_URL=http://localhost:3000
PORT=3000

# -----------------------------------------------------------------------------
# Supabase (shared by backend, workers, and staff dashboard)
# Backend reads SUPABASE_URL + SUPABASE_SERVICE_ROLE_KEY; keep NEXT_PUBLIC values aligned for client access.
# -----------------------------------------------------------------------------
TEST_MODE=false  # true for local dev testing, false/unset for production
SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=public-anon-key
SUPABASE_SERVICE_ROLE_KEY=service-role-key
SUPABASE_SERVICE_KEY=${SUPABASE_SERVICE_ROLE_KEY}

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
# JWT for customer auth flows (JWTManager requires 64+ chars for access and refresh)
JWT_ACCESS_SECRET=please-change-me-with-64+characters-aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
JWT_REFRESH_SECRET=please-change-me-with-64+characters-bbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb
ENCRYPTION_KEY=please-change-me-32-characters-minimum
ADMIN_API_KEY=admin-shared-secret
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me
ADMIN_SESSION_TOKEN=admin-session-token
STAFF_API_KEY=staff-shared-secret
STAFF_USERNAME=staff
STAFF_PASSWORD=change-me
STAFF_DASHBOARD_PASSWORD=change-me
STAFF_SESSION_TOKEN=staff-session-token
AUTOBOLT_API_KEY=worker-shared-secret
AUTOBOLT_API=https://autobolt.api/endpoint
AUTOBOLT_TOKEN=autobolt-service-token
WORKER_AUTH_TOKEN=worker-auth-secret
ALLOWED_ORIGINS=http://localhost:3000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# -----------------------------------------------------------------------------
# Queue / Worker Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000
NEXT_PUBLIC_API_KEY=public-api-key
NEXT_PUBLIC_WS_URL=
PUPPETEER_EXECUTABLE_PATH=
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
USER_AGENT=DirectoryBolt/LocalDev

# -----------------------------------------------------------------------------
# Stripe Billing
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_change_me
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_change_me
STRIPE_WEBHOOK_SECRET=whsec_change_me
STRIPE_STARTER_PRICE_ID=price_starter
STRIPE_GROWTH_PRICE_ID=price_growth
STRIPE_PROFESSIONAL_PRICE_ID=price_professional
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise

# -----------------------------------------------------------------------------
# Optional Integrations
# -----------------------------------------------------------------------------
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
SENTRY_DSN=
GA_MEASUREMENT_ID=
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# -----------------------------------------------------------------------------
# Testing & Tooling (override as needed locally)
# -----------------------------------------------------------------------------
REAL_REQUESTS=false
INTERACTIVE=false
OUTPUT_DIR=.tmp/test-output
TEST_BASE_URL=http://localhost:3000
TEST_TIMEOUT=60000

