# DirectoryBolt Environment Variables
# Copy to .env.local for development, .env.production for production

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/directorybolt
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters
NEXTAUTH_SECRET=your-nextauth-secret-for-production
NEXTAUTH_URL=https://directorybolt.com
ENCRYPTION_KEY=your-32-char-encryption-key-here

# API Keys
STRIPE_PUBLISHABLE_KEY=pk_test_or_live_key
STRIPE_SECRET_KEY=sk_test_or_live_key
STRIPE_WEBHOOK_SECRET=whsec_webhook_secret

# Stripe Price IDs (Create these in your Stripe Dashboard)
# These should be recurring monthly subscription price IDs
STRIPE_STARTER_PRICE_ID=price_starter_monthly_id
STRIPE_GROWTH_PRICE_ID=price_growth_monthly_id
STRIPE_PROFESSIONAL_PRICE_ID=price_professional_monthly_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly_id

# Web Scraping & External APIs
RAPID_API_KEY=your-rapid-api-key
SCRAPING_API_KEY=your-scraping-service-key
USER_AGENT=DirectoryBolt/1.0 (+https://directorybolt.com)

# Rate Limiting & Performance
REDIS_URL=redis://localhost:6379
MAX_REQUESTS_PER_HOUR=100
MAX_CONCURRENT_SCRAPES=5

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=info
ENABLE_ANALYTICS=true

# Development
NODE_ENV=development
PORT=3000