# DirectoryBolt Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# STRIPE CONFIGURATION (REQUIRED FOR PAYMENTS)
# =============================================================================

# Stripe Secret Key - Get from https://dashboard.stripe.com/apikeys
# Use sk_test_ for development, sk_live_ for production
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Publishable Key - Get from https://dashboard.stripe.com/apikeys
# Use pk_test_ for development, pk_live_ for production
# Must be prefixed with NEXT_PUBLIC_ for client-side access
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# DirectoryBolt Core Package Price IDs (One-time payments)
# Create these products in Stripe Dashboard with mode: 'payment'
STRIPE_STARTER_PRICE_ID=price_starter_50_directories_4900_cents
STRIPE_GROWTH_PRICE_ID=price_growth_100_directories_8900_cents  
STRIPE_PRO_PRICE_ID=price_pro_200_directories_15900_cents

# DirectoryBolt Subscription Service Price IDs (Monthly recurring)
# Create subscription products in Stripe Dashboard with mode: 'subscription'
STRIPE_AUTO_UPDATE_PRICE_ID=price_auto_update_4900_cents_monthly

# DirectoryBolt Add-On Price IDs (One-time upsells)
# Create one-time add-on products in Stripe Dashboard
STRIPE_FAST_TRACK_PRICE_ID=price_fast_track_2500_cents
STRIPE_PREMIUM_DIRECTORIES_PRICE_ID=price_premium_directories_1500_cents
STRIPE_MANUAL_QA_PRICE_ID=price_manual_qa_1000_cents
STRIPE_CSV_EXPORT_PRICE_ID=price_csv_export_900_cents

# Stripe Webhook Secret - Get from Stripe Dashboard webhooks section
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Legacy price IDs (for backwards compatibility)
STRIPE_PROFESSIONAL_PRICE_ID=price_professional_replace_with_actual_id

# Enterprise OR Monthly Subscription (choose one)
# Option 1: Enterprise plan (one-time or recurring)
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_replace_with_actual_id
# Option 2: Monthly subscription (use this if you have monthly instead of enterprise)
STRIPE_SUBSCRIPTION_PRICE_ID=price_monthly_subscription_replace_with_actual_id

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Your application URL (required for Stripe redirects)
NEXTAUTH_URL=http://localhost:3000

# Custom User Agent for web scraping (optional)
USER_AGENT=DirectoryBolt/2.0 (+https://your-domain.com)

# =============================================================================
# DATABASE CONFIGURATION (OPTIONAL)
# =============================================================================

# Supabase Configuration (if using Supabase for data storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# =============================================================================
# AIRTABLE CONFIGURATION (REQUIRED)
# =============================================================================

# Airtable Personal Access Token (PAT) - Get from https://airtable.com/create/tokens
# Airtable now uses Personal Access Tokens instead of API Keys
AIRTABLE_ACCESS_TOKEN=patXXXXXXXXXXXXXX

# Airtable Base ID - Get from your Airtable base URL
# Example: If your base URL is https://airtable.com/appZDNMzebkaOkLXo, base ID is appZDNMzebkaOkLXo
AIRTABLE_BASE_ID=appZDNMzebkaOkLXo

# Airtable Table Name - Name of the table to store business submissions
AIRTABLE_TABLE_NAME=Directory Bolt Import.xlsx

# =============================================================================
# AI/API INTEGRATIONS (OPTIONAL)
# =============================================================================

# OpenAI API Key (for AI-powered analysis features)
OPENAI_API_KEY=sk-your-openai-key-here

# =============================================================================
# MONITORING & ANALYTICS (OPTIONAL)
# =============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn-here

# Google Analytics ID
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Set to 'production' for production deployment
NODE_ENV=development

# Enable debug logging (true/false)
DEBUG=true

# Set log level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# BUILD-TIME CONFIGURATION (automatically set during build)
# =============================================================================

# These are automatically set during build process - do not set manually
# BUILDING=true (set during next build)
# NETLIFY=true (set during Netlify builds)
# CI=true (set in CI/CD environments)
