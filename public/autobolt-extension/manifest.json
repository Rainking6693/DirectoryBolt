{
  "manifest_version": 3,
  "name": "AutoBolt - DirectoryBolt Extension",
  "version": "3.0.1",
  "description": "Automated directory submission extension for DirectoryBolt customers",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://directorybolt.com/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoBolt Extension"
  },
  "web_accessible_resources": [
    {
      "resources": ["package-tier-engine.js", "directory-bolt-api.js", "autobolt-processor.js"],
      "matches": ["<all_urls>"]
    }
  ]
}